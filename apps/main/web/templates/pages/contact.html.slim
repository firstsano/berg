- content_store.capture(:title, "Contact")
== content_store.capture :og_meta_tags do
  meta property="og:title" content="Contact"
  meta property="og:description" content="We can be reached by telephone in Canberra on (02) 6162 0241, or in Melbourne on (03) 9416 3198."

.contact
  .pulled-heading.pulled-heading--narrow.pulled-heading--color-red.pulled-heading--border-blue.mx-auto
    h3.pulled-heading__heading
      span Get in touch
  .contact__intro.grid.grid--narrow.mx-auto
    p You can reach us by email at <a href="mailto:hello@icelab.com.au">hello@icelab.com.au</a>.

  .contact__locations.grid.grid--narrow.mx-auto
    - contact_details.each do |contact_detail|
      .contact__location.clearfix
        .contact__location-heading-column.fl-left
          h2.contact__location-heading== contact_detail.name_html
        .contact__location-address-column.copy.fl-left
          == contact_detail.address_html
          p.contact__location-phone-number== contact_detail.phone_number_html
        .contact__location-map-column.fl-left
          .contact-map-container
            .contact-map-container__map data-view-map-embed={mapLatitude: contact_detail.latitude, mapLongitude: contact_detail.longitude, mapCenter: "#{contact_detail.latitude}, #{contact_detail.longitude}", mapZoom: 16, placeName: "Icelab #{contact_detail.name}", placeAddress: "#{contact_detail.address_html}"}.to_json
